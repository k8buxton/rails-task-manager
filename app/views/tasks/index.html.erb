<h1>My Tasks</h1>


<% @tasks.each do |task| %>
  <div class="container">
    <div class="row text-center">
      <div class="col-xs-12 col-sm-4">
        <h2><%= link_to task.title, task_path(task) %></h2>
          <% if task.completed %>
            <p>Completed?</p>
            <i class="far fa-check-square"></i>
          <% else %>
            <p>Completed?</p>
            <i class="far fa-square"></i>
          <% end %>
          <br>
          <div class="btn btn-info">
            <%= link_to "Remove this task", task_path(task), method: :delete, data: {confirm: "Are you sure"} %>
          </div>
          <br>
          <div class="btn btn-info">
           <%= link_to "Edit this task", edit_task_path(task)%>
          </div>
          <br>
          <div class="btn btn-warning">
            <%=  link_to "Add a task", new_task_path%>
          </div>
      </div>
    </div>
  </div>
<% end %>




